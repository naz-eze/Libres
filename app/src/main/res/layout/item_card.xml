<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/md_keylines"
    android:paddingTop="@dimen/md_keylines"
    android:paddingRight="@dimen/md_keylines"
    android:paddingBottom="@dimen/md_keylines">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/md_keylines"
            android:layout_marginEnd="@dimen/md_keylines"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/colorHeader"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:padding="2dp"
                tools:text="Travel" />

            <TextView
                android:id="@+id/info_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/quantum_black_text"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="serif"
                android:padding="2dp"
                tools:text="Travel advice" />

            <TextView
                android:id="@+id/info_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:typeface="serif"
                android:textColor="@color/quantum_black_text"
                android:padding="2dp"
                tools:text="Ministry of Health of Spain" />

            <TextView
                android:id="@+id/info_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/quantum_black_text"
                android:singleLine="true"
                android:textSize="15sp"
                android:padding="2dp"
                tools:text="https://mscbs.gob.es/" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>